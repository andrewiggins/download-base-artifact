{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules", "dist", "rollup.config.js"]
}
